<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="1" author="mvo">
        <createTable tableName="writers">
            <column name="id" type="INT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="firstName" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="lastName" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="writers"/>
        </rollback>
    </changeSet>

    <changeSet id="2" author="mvo">
        <createTable tableName="Post">
            <column name="id" type="INT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="content" type="TEXT"/>
            <column name="created" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="updated" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="status" type="ENUM('ACTIVE', 'UNDER_REVIEW', 'DELETED')">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="Post"/>
        </rollback>
    </changeSet>

    <changeSet id="3" author="mvo">
        <createTable tableName="Label">
            <column name="id" type="INT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="Label"/>
        </rollback>
    </changeSet>

    <changeSet id="4" author="mvo">
        <createTable tableName="Post_Label">
            <column name="post_id" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="label_id" type="INT">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="Post_Label"/>
        </rollback>
    </changeSet>

    <changeSet id="5" author="mvo">
        <addForeignKeyConstraint baseTableName="Post_Label"
                                 baseColumnNames="post_id"
                                 constraintName="fk_post_label_post"
                                 referencedTableName="Post"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"/>
        <rollback>
            <dropForeignKeyConstraint baseTableName="Post_Label" constraintName="fk_post_label_post"/>
        </rollback>
    </changeSet>

    <changeSet id="6" author="mvo">
        <addForeignKeyConstraint baseTableName="Post_Label"
                                 baseColumnNames="label_id"
                                 constraintName="fk_post_label_label"
                                 referencedTableName="Label"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"/>
        <rollback>
            <dropForeignKeyConstraint baseTableName="Post_Label" constraintName="fk_post_label_label"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
